<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#000000" >

    <TextView
        android:id="@+id/issueLogIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="3"
        android:visibility="gone" />

    <TextView
        android:id="@+id/issueIdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="3"
        
        android:textColor="#000000" />

    <TextView
        android:id="@+id/fieldChangedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:maxLines="3" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/originalValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:maxLines="3" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/displayArrowTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="=>" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/updatedValueTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:gravity="center"
        android:maxLines="3" 
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/updateTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:maxLines="3" 
        android:textColor="#000000"/>

</TableRow>